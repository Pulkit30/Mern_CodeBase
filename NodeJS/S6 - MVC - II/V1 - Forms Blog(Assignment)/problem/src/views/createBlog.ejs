<!-- views/add-product.ejs -->

<h1 class="mt-5 mb-4">Add Blog</h1>
<form action="/" method="post">
    <div class="mb-3">
        <label for="name" class="form-label">Title</label>
        <input type="text" class="form-control" id="title" name="title" placeholder="Enter Blog Title" required>
    </div>
    <div class="mb-3">
        <label for="desc" class="form-label">Description</label>
        <textarea class="form-control" id="desc" name="desc" rows="3" placeholder="Enter Blog Description" required></textarea>
    </div>
    <div class="mb-3">
        <label for="imageUrl" class="form-label">Image</label>
        <input type="url" class="form-control" id="imageUrl" placeholder="Enter Blog Image url" name="imageUrl" required>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>